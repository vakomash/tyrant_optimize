MAIN := tuo-test
SRCS := $(wildcard *.cpp)
OBJS := $(patsubst %.cpp,obj-test/%.o,$(SRCS))
INCS := $(wildcard *.h)
ifndef VERSION
VERSION = $(shell git describe --tags --abbrev=0 --dirty)
ifeq ($(VERSION),)
VERSION=NO VERSION
${warning "VERSION is not set (USING NO VERSION instead), use make VERSION=vX.XX.X"}
endif
endif

CPPFLAGS := -Wall -Werror -std=gnu++11 -Ofast -g -DTYRANT_OPTIMIZER_VERSION='"$(VERSION)--test"' -DTEST -DNQUEST -fprofile-arcs -ftest-coverage
LDFLAGS := -lboost_system -lboost_thread -lboost_filesystem -lboost_regex -lboost_timer -lboost_unit_test_framework -fprofile-arcs -lpthread

all: $(MAIN)

obj-test/.stamp:
	mkdir -p obj-test
	touch obj-test/.stamp

obj-test/%.o: %.cpp $(INCS) obj-test/.stamp
	$(CXX) $(CPPFLAGS) -o $@ -c $<

$(MAIN): $(OBJS)
	$(CXX) -o $@ $(OBJS) $(LDFLAGS)

rebuild: clean all

clean:
	rm -rf $(MAIN) obj-test/*.o *.gcov obj-test/*.gcov *.gcda obj-test/*.gcda *.gcno obj-test/*.gcno
